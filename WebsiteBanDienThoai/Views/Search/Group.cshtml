@model IEnumerable<IGrouping<int?, WebsiteBanDienThoai.Models.SANPHAM>>
@{
    ViewBag.Title = "Group";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Tổng hợp sản phẩm</h2>
@foreach (var item in Model)
{
    <div>
       @* <h4 style="font-weight:bold; color:red;">MÃ CHỦ ĐỀ @item.Key</h4>*@
        <table border="1">
            <tr style="background-color:burlywood;font-weight:bold;">
                <td>Mã Sản Phẩm</td>
                <td>Tên Sản Phẩm</td>
                <td>Số lượng</td>
                <td>Thể loại</td>
            </tr>
            @foreach (var sach in item)
            {
                <tr>
                    <td>@sach.MaSP</td>
                    <td>@sach.TenSP</td>
                    <td>@sach.SoLuongBan</td>
                    <td>@sach.TIEUDE.TenChuDe</td>
                </tr>
            }
        </table>
    </div>
}


