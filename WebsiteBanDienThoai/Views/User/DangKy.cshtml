<div class="container h-100">
    <div class="d-flex justify-content-center h-100">
        <div class="user_card">
            <div class="d-flex justify-content-center">
                <div class="brand_logo_container">
                    <a href="~/BanDienThoai/TrangChu"> <img src="~/Images/messi.png" class="brand_logo" alt="Logo"></a>
                </div>
            </div>
            <div class="d-flex justify-content-center form_container">

                @using (Html.BeginForm("DangKy", "User"))
                {
                    @Html.ValidationSummary(false)
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-user-alt"></i></span>
                        </div>
                        <input type="text" name="HoTen" class="form-control input_user" value="" placeholder="Họ Tên">
                    </div>
                    <p style="color:red;"> @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })</p>




                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-user-circle"></i></span>
                        </div>
                        <input type="text" name="TaiKhoan" class="form-control input_pass" value="" placeholder="Tài khoản">
                    </div>
                    <p style="color:red;"> @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })</p>


                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input type="password" name="MatKhau" class="form-control input_pass" value="" placeholder="Mật khẩu">
                    </div>
                    <p style="color:red;"> @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })</p>


                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input type="password" name="MatKhauNL" class="form-control input_pass" value="" placeholder="Nhập lại mật khẩu">
                    </div>
                    <p style="color:red;">@ViewData["err4"]</p>


                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        </div>
                        <input type="text" name="Email" class="form-control input_pass" value="" placeholder="Email">
                    </div>
                    <p style="color:red;"> @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })</p>




                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-phone"></i></span>
                        </div>
                        <input type="text" name="DienThoai" class="form-control input_pass" value="" placeholder="Điện thoại">
                    </div>
                    <p style="color:red;">  @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })</p>


                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                        </div>
                        <input type="date" name="NgaySinh" class="form-control input_pass" value="" placeholder="Ngày sinh">
                    </div>
                    <p style="color:red;"> @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })</p>

                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-address-card"></i></span>
                        </div>
                        <input type="text" name="DiaChi" class="form-control input_pass" value="" placeholder="Địa chỉ">
                    </div>
                    <p style="color:red;"> @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })</p>





                    
                    <div class="d-flex justify-content-center mt-3 login_container">
                        <button type="submit" name="button" class="btn login_btn">Đăng ký</button>
                    </div>
                }

            </div>

            <div class="mt-4">
                <div class="d-flex justify-content-center links">
                    Bạn đã có tài khoản? <a class="ml-2">@Html.ActionLink("Đăng Nhập", "DangNhap", "User")</a>
                </div>
                @*<div class="d-flex justify-content-center links">
                        <a href="#">Forgot your password?</a>
                    </div>*@
            </div>
        </div>
    </div>
</div>
