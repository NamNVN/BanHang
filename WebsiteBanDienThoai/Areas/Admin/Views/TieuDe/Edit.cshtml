@model WebsiteBanDienThoai.Models.TIEUDE

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin1.cshtml";
}

<style type="text/css">
    .container a {
        text-decoration: none;
        color: dodgerblue;
    }
</style>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2 style="text-align:center;">ĐIỀU CHỈNH THÔNG TIN CHỦ ĐỀ</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaCD)

            <div class="form-group">
                <label class="control-label col-md-2">Tên chủ đề:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenChuDe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenChuDe, "", new { @class = "text-danger" })
                </div>
            </div>

             <div class="form-group">
                <label class="control-label col-md-2">Tên phụ:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenPhu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenPhu, "", new { @class = "text-danger" })
                </div>
            </div>

              <div class="form-group">
                <label class="control-label col-md-2">Mã sản xuất:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaSX, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaSX, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

        @Html.ActionLink("VỀ TRANG QUẢN LÝ CHỦ ĐỀ", "Index")
    </div>
