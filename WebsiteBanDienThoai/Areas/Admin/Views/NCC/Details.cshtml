@model WebsiteBanDienThoai.Models.NCC

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin1.cshtml";
}

<style type="text/css">

    .container img {
        width: 200px;
        margin-bottom: 20px;
    }
    .container a {
        text-decoration: none;
        color: dodgerblue;
    }
</style>

<h2 style="text-align:center;">CHI TIẾT NHÀ CUNG CẤP</h2>

<div class="container">

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên nhà cung cấp:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenNCC)
        </dd>

        <dt>
            Địa chỉ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
            Điện thoại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DienThoai)
        </dd>

        <dt>
            Ảnh bìa:
        </dt>

        <dd>
            <img src="~/Images/@Model.AnhBia" alt="@Model.TenNCC">
        </dd>

    </dl>

    <p>
        @Html.ActionLink("Sửa", "Edit", new { id = Model.MaNCC }) |
        @Html.ActionLink("Quay lại trang nhà cung cấp", "Index")
    </p>
</div>