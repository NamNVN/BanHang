@model WebsiteBanDienThoai.Models.SANPHAM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin1.cshtml";
}

<style type="text/css">
    .container a {
        text-decoration: none;
        color: dodgerblue;
    }
</style>

<h2 style="text-align:center;">ĐIỀU CHỈNH THÔNG TIN SẢN PHẨM</h2>

@*thêm thuộc tính cho form để up ảnh*@
@using (Html.BeginForm("Edit", "SanPham", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Mã sản phẩm:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaSP" value="@Model.MaSP" readonly />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tên sản phẩm:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenSP" value="@Model.TenSP"
                       required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Mô tả:</label>
            <div class="col-md-10">
                <textarea style="width:855px;" name="sMoTa">@Model.MoTa</textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Ảnh bìa 1:</label>
            <div class="col-md-10">
                <input type="file" name="fFileUpload" />
                <img src="~/Images/@Model.AnhBia" style="width:120px;" />
              
            </div>
        </div>

         <div class="form-group">
            <label class="control-label col-md-2">Ảnh bìa 2:</label>
            <div class="col-md-10">
                <input type="file" name="fFileUpload1" />
                <img src="~/Images/@Model.AnhBia1" style="width:120px;" />
              
            </div>
        </div>

         <div class="form-group">
            <label class="control-label col-md-2">Ảnh bìa 3:</label>
            <div class="col-md-10">
                <input type="file" name="fFileUpload2" />
                <img src="~/Images/@Model.AnhBia2" style="width:120px;" />
               
            </div>
        </div>

         <div class="form-group">
            <label class="control-label col-md-2">Ảnh bìa 4:</label>
            <div class="col-md-10">
                <input type="file" name="fFileUpload3" />
                <img src="~/Images/@Model.AnhBia3" style="width:120px;" />
                @*Thông báo lỗi yêu cầu phải chọn ảnh bìa*@
                @ViewBag.ThongBao
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2">Màu sắc:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sMauSac" value="@Model.MauSac"
                       required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Kích thước:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sKichThuoc" value="@Model.KichThuoc"
                       required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Giới tính:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sGioitinh" value="@Model.Gioitinh"
                       required />
            </div>
        </div>

       

        <div class="form-group">
            <label class="control-label col-md-2">Ngày cập nhật:</label>
            <div class="col-md-10">
                <input type="datetime" name="dNgayCapNhat" required value="@Convert.ToDateTime(Model.NgayCapNhat)" />
            </div>
        </div>

         <div class="form-group">
            <label class="control-label col-md-2">Lượt xem:</label>
            <div class="col-md-10">
                <input type="number" min="1" required name="iLuotXem"
                       value="@Model.LuotXem" />
            </div>
        </div>

         <div class="form-group">
            <label class="control-label col-md-2">Đánh giá:</label>
            <div class="col-md-10">
                <input type="number" min="1" required name="iDanhGia"
                       value="@Model.DanhGia" />
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2">Số lượng:</label>
            <div class="col-md-10">
                <input type="number" min="1" required name="iSoLuong"
                       value="@Model.SoLuongBan" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Giá bán:</label>
            <div class="col-md-10">
                <input type="text" min="1" name="mGiaBan"
                       value="@Model.GiaBan" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Chủ đề:</label>
            <div class="col-md-10">
                @*Hiển thị ViewBag.MaCD vào dropdownlist*@
                @Html.DropDownList("MaCD")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nhà cung cấp:</label>
            <div class="col-md-10">
                @*Hiển thị ViewBag.MaCD vào dropdownlist*@
                @Html.DropDownList("MaNCC")
            </div>
        </div>

         <div class="form-group">
            <label class="control-label col-md-2">Khuyến mãi:</label>
            <div class="col-md-10">
                <input type="number" required name="MaKM"
                       value="@Model.MaKM" />
            </div>
        </div>
          

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
                </div>
            </div>
        
    </div>
}

<div class="container">
    <hr />
    @Html.ActionLink("VỀ TRANG QUẢN LÝ SẢN PHẨM", "Index")
    <hr />
</div>
