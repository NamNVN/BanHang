@model WebsiteBanDienThoai.Models.SANPHAM

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin1.cshtml";
}
<style type="text/css">
    .container a {
        text-decoration:none;
        color:dodgerblue;
    }
</style>
<h2 style="text-align:center;">THÊM SẢN PHẨM</h2>
@*Thêm thuộc tính cho form để upload ảnh*@
@using (Html.BeginForm("Create", "SanPham", FormMethod.Post, new
{
    @enctype =
"multipart/form-data"
}))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên sản phẩm:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenSP" value="@ViewBag.TenSP"
                       required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Mô tả:</label>
            <div class="col-md-10">
                <textarea style="width:855px;" name="sMoTa">@ViewBag.MoTa</textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Ảnh bìa 1:</label>
            <div class="col-md-10">
                <input type="file" name="fFileUpload" />

                @*Thông báo lỗi yêu cầu phải chọn ảnh bìa*@
                @ViewBag.ThongBao
            </div>
        </div>

         <div class="form-group">
            <label class="control-label col-md-2">Ảnh bìa 2:</label>
            <div class="col-md-10">
                <input type="file" name="fFileUpload1" />

                @*Thông báo lỗi yêu cầu phải chọn ảnh bìa*@
                @ViewBag.ThongBao
            </div>
        </div>

         <div class="form-group">
            <label class="control-label col-md-2">Ảnh bìa 3:</label>
            <div class="col-md-10">
                <input type="file" name="fFileUpload2" />

                @*Thông báo lỗi yêu cầu phải chọn ảnh bìa*@
                @ViewBag.ThongBao
            </div>
        </div>

         <div class="form-group">
            <label class="control-label col-md-2">Ảnh bìa 4:</label>
            <div class="col-md-10">
                <input type="file" name="fFileUpload3" />

                @*Thông báo lỗi yêu cầu phải chọn ảnh bìa*@
                @ViewBag.ThongBao
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2">Màu sắc:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sMauSac" value="@ViewBag.MauSac"
                       required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Kích thước:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sKichThuoc" value="@ViewBag.KichThuoc"
                       required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Giới tính:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sGioitinh" value="@ViewBag.Gioitinh"
                       required />
            </div>
        </div>



        <div class="form-group">
            <label class="control-label col-md-2">Ngày cập nhật:</label>
            <div class="col-md-10">
                <input type="date" name="dNgayCapNhat" required />
            </div>
        </div>

         <div class="form-group">
            <label class="control-label col-md-2">Lượt xem:</label>
            <div class="col-md-10">
                <input type="number" min="1" required name="iLuotXem"
                       value="@ViewBag.LuotXem" />
            </div>
        </div>

         <div class="form-group">
            <label class="control-label col-md-2">Đánh giá:</label>
            <div class="col-md-10">
                <input type="number" min="1" required name="iDanhGia"
                       value="@ViewBag.DanhGia" />
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2">Số lượng:</label>
            <div class="col-md-10">
                <input type="number" min="1" required name="iSoLuong"
                       value="@ViewBag.SoLuong" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Giá bán:</label>
            <div class="col-md-10">
                <input type="number" min="1" required name="mGiaBan"
                       value="@ViewBag.GiaBan" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Chủ đề:</label>
            <div class="col-md-10">
                @*Hiển thị ViewBag.MaCD vào dropdownlist*@
                @Html.DropDownList("MaCD")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nhà cung cấp:</label>
            <div class="col-md-10">
                @*Hiển thị ViewBag.MaCD vào dropdownlist*@
                @Html.DropDownList("MaNCC")
            </div>
        </div>

         <div class="form-group">
            <label class="control-label col-md-2">Khuyến mãi:</label>
            <div class="col-md-10">
                <input type="number" required name="MaKM"
                       value="@ViewBag.MaKM" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div class="container">
    <hr/>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ SẢN PHẨM", "Index")
    <hr/>
</div>