@model WebsiteBanDienThoai.Models.KHUYENMAI

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin1.cshtml";
}


<style type="text/css">
    .container a {
        text-decoration: none;
        color: dodgerblue;
    }
</style>
<h2 style="text-align:center;">ĐIỀU CHỈNH THÔNG TIN KHUYẾN MÃI</h2>
<div class="container">
    @using (Html.BeginForm("Edit", "KhuyenMai", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <label class="control-label col-md-2">Mã sản phẩm:</label>
                <div class="col-md-10">
                    <input type="number" size="70" name="MaSP" value="@Model.MaSP" readonly />
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-md-2">Mô tả:</label>
                <div class="col-md-10">
                    <textarea style="width:855px;" name="sMoTa">@Model.MoTa</textarea>
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-md-2">Phần trăm:</label>
                <div class="col-md-10">
                    <input type="text" size="70" name="sPhanTram" value="@Model.PhanTram"
                           required />
                </div>
            </div>



            <div class="form-group">
                <label class="control-label col-md-2">Ngày bắt đầu:</label>
                <div class="col-md-10">
                    <input type="datetime" name="dNgayBD" required value="@Convert.ToDateTime(Model.NgayBD)" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">Ngày kết thúc:</label>
                <div class="col-md-10">
                    <input type="datetime" name="dNgayKT" required value="@Convert.ToDateTime(Model.NgayKT)" />
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-md-2">Giá bán:</label>
                <div class="col-md-10">
                    <input type="text" min="1" name="mGiaBan"
                           value="@Model.GiaBan" />
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    
        @Html.ActionLink("Quay lại trang quản lí khuyến mãi", "Index")
    </div>
